<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for UI functionality -->
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <!-- Storage permissions for log export -->
    <!-- Android 9 and below: Direct file access -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"
        tools:ignore="ScopedStorage" />
    <!-- Android 10+: Uses MediaStore API (no permission needed for Downloads) -->

    <application
        android:name=".DeviceMaskerApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DeviceMasker">

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- LSPosed/Xposed Module Metadata -->
        <!-- CRITICAL: These MUST be inside <application> tag! -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposedminversion"
            android:value="93" />
        <meta-data
            android:name="xposeddescription"
            android:value="@string/xposed_description" />
        <meta-data
            android:name="xposedscope"
            android:resource="@array/xposed_scope" />
        <!-- CRITICAL: Required for XSharedPreferences cross-process access -->
        <meta-data
            android:name="xposedsharedprefs"
            android:value="true" />


        <!-- MainActivity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DeviceMasker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>