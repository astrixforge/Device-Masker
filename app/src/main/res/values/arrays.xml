    <!-- 
    Xposed/LSPosed module scope configuration.
    
    Recommended scope for device spoofing modules:
    - android: System Framework - enables DeviceMaskerService in system_server
    - com.android.providers.settings: Settings Storage - hook Settings.Secure/Global
    
    Additional apps are selected by user in LSPosed Manager.
    -->
    <string-array name="xposed_scope">
        <!-- System Framework: Required for DeviceMaskerService AIDL in system_server -->
        <item>android</item>

        <!-- Settings Storage: Hook Settings.Secure.ANDROID_ID and similar -->
        <item>com.android.providers.settings</item>
    </string-array>
</resources>